@model EquipCheck.Models.ViewModels.DepartmentViewModel;

@{
    ViewData["Title"] = "新增部門";
}

<style>
    /* 卡片樣式 */
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: none;
        margin-bottom: 1.5rem;
    }

    /* 麵包屑美化 */
    .breadcrumb {
        background-color: #fff;
        padding: 1rem;
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    /* 表單元素美化 */
    .form-control:focus, .form-select:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    /* Select2 美化 */
    .select2-container--bootstrap-5 .select2-selection {
        border: 1px solid #ced4da;
        min-height: 38px;
    }

    .select2-container--bootstrap-5 .select2-selection--multiple {
        padding: 0.375rem 0.75rem;
    }

    .select2-container--bootstrap-5 .select2-selection__choice {
        background-color: #e9ecef;
        border: none;
        border-radius: 0.25rem;
        padding: 0.25rem 0.5rem;
        margin: 0.125rem;
    }

    /* 必填標記樣式 */
    .required-mark {
        color: #dc3545;
        margin-left: 0.25rem;
    }

    /* 卡片標題區域 */
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid rgba(0,0,0,.125);
        padding: 1.5rem;
    }

    /* 按鈕組樣式 */
    .btn-group-bottom {
        padding-top: 1.5rem;
        border-top: 1px solid #dee2e6;
    }

    /* 表單區塊間距 */
    .form-section {
        margin-bottom: 2rem;
    }

    /* 欄位提示文字 */
    .field-hint {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 0.25rem;
    }
</style>

<!-- 麵包屑 -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <i class="bi bi-gear me-1"></i>系統管理
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("List", "DepartmentManagement")" class="text-decoration-none">部門管理</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">新增部門</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header d-flex align-items-center">
        <i class="bi bi-building me-2 text-primary"></i>
        <h5 class="card-title mb-0">新增部門</h5>
    </div>
    <div class="card-body">
        <form id="departmentForm" method="post" class="needs-validation" novalidate>
            <div class="row g-4">
                <!-- 部門名稱 -->
                <div class="col-md-6 form-section">
                    <label for="departmentName" class="form-label">
                        <i class="bi bi-building me-1"></i>部門名稱
                        <span class="required-mark">*</span>
                    </label>
                    @* <input type="text" class="form-control" id="departmentName" name="departmentName"
                           required placeholder="請輸入部門名稱"> *@
                    @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control", placeholder = "請輸入部門名稱", required = "required" })
                    <div class="invalid-feedback">請輸入部門名稱</div>
                </div>

                <!-- 主管名稱 -->
                <div class="col-md-6 form-section">
                    <label for="managerId" class="form-label">
                        <i class="bi bi-person-badge me-1"></i>主管名稱
                        @* <span class="required-mark">*</span> *@
                    </label>
                    @Html.DropDownListFor(m => m.Manager, new SelectList(Model.ManagerDDL, "Value", "Text"), "請選擇部門主管", new { @class = "form-select" })
                    <div class="invalid-feedback">請選擇部門主管</div>
                </div>

                <!-- 部門成員 -->
@*                 <div class="col-12 form-section">
                    <label for="members" class="form-label">
                        <i class="bi bi-people me-1"></i>部門成員
                    </label>
                    <select class="form-select" id="members" name="members[]" multiple>
                        @foreach (var employee in ViewBag.Employees ?? new List<dynamic>())
                        {
                            <option value="@employee.Value">@employee.Text</option>
                        }
                    </select>
                    <div class="field-hint">
                        <i class="bi bi-info-circle me-1"></i>可複選多個部門成員
                    </div>
                </div> *@

                <!-- 按鈕群組 -->
                <div class="col-12 btn-group-bottom">
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" onclick="history.back()">
                            <i class="bi bi-arrow-left me-1"></i>返回
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>儲存
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function() {
            // 初始化 Select2
            $('#managerId').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: '請選擇主管'
            });

            $('#members').select2({
                theme: 'bootstrap-5',
                width: '100%',
                placeholder: '請選擇部門成員',
                allowClear: true
            });

            // 表單驗證
            $('#departmentForm').on('submit', function(e) {
                e.preventDefault();

                if (!this.checkValidity()) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    return;
                }

                // 發送表單數據
                $.ajax({
                    url: '@Url.Action("Add", "DepartmentManagement")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: response.message,
                                text: '部門已成功建立',
                                confirmButtonText: '確定'
                            }).then((result) => {
                                window.location.href = '@Url.Action("List", "DepartmentManagement")';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: '新增失敗',
                                text: response.message || '發生錯誤，請稍後再試',
                                confirmButtonText: '確定'
                            });
                        }
                    },
                    error: function() {
                        Swal.fire({
                            icon: 'error',
                            title: '系統錯誤',
                            text: '請稍後再試',
                            confirmButtonText: '確定'
                        });
                    }
                });
            });
        });
    </script>
}