@model EquipCheck.Models.ViewModels.VM_PersonalForm

@{
    ViewData["Title"] = "表單管理";
}

<!-- 麵包屑 -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><i class="bi bi-person me-1"></i>個人管理</li>
        <li class="breadcrumb-item active" aria-current="page">表單管理</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">表單管理</h5>
    </div>
    <div class="card-body">
        <form id="searchForm" method="post">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">關鍵字</label>
                    <input type="text" class="form-control" name="keyword" placeholder="請輸入表單名稱">
                </div>
                <div class="col-md-3">
                    <label class="form-label">年度(民國)</label>
                    <input type="number" class="form-control" name="year" placeholder="請輸入年度">
                </div>
                <div class="col-md-3">
                    <label class="form-label">表單填寫期間(起)</label>
                    <input type="date" class="form-control" name="startDate">
                </div>
                <div class="col-md-3">
                    <label class="form-label">表單填寫期間(迄)</label>
                    <input type="date" class="form-control" name="endDate">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>搜尋
                    </button>
                    <button type="button" class="btn btn-secondary ms-2" onclick="clearForm()">
                        <i class="bi bi-x-circle me-1"></i>清除
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card mt-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>年度(民國)</th>
                        <th>表單填寫(起)</th>
                        <th>表單填寫(迄)</th>
                        <th>表單名稱</th>
                        <th>發布人員</th>
                        <th>發布狀態</th>
                        <th>動作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.FormList.Any())
                    {
                        @foreach (var item in Model.FormList)
                        {
                            <tr>
                                <td>@item.Year</td>
                                <td>@item.StartDate</td>
                                <td>@item.EndDate</td>
                                <td>@item.FormName</td>
                                <td>@item.SponsorName</td>
                                <td>@item.StatusName</td>
                                <td>
                                    @if (item.IsFinished == -1)
                                    {
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary"
                                                    onclick="location.href='@Url.Action("Edit", "PersonalForm", new { id = item.FormUID })'">
                                                <i class="bi bi-pencil"></i>編輯
                                            </button>
                                        </div>
                                    }
                                    else if (item.IsFinished == 0)
                                    {
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary"
                                                    onclick="location.href='@Url.Action("Edit", "PersonalForm", new { id = item.FormUID })'">
                                                <i class="bi bi-pencil"></i>待審核
                                            </button>
                                        </div>
                                    }
                                    else if (item.IsFinished == 2)
                                    {
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary"
                                                    onclick="location.href='@Url.Action("Edit", "PersonalForm", new { id = item.FormUID })'">
                                                <i class="bi bi-pencil"></i>編輯(被退回)
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-success" disabled>
                                                <i class="bi bi-check-circle"></i>通過
                                            </button>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">無資料</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 清除搜尋條件
        function clearForm() {
            // 清除所有輸入欄位
            document.querySelector('input[name="keyword"]').value = '';
            document.querySelector('input[name="year"]').value = '';
            document.querySelector('input[name="startDate"]').value = '';
            document.querySelector('input[name="endDate"]').value = '';

            // 送出表單以重新載入頁面
            document.getElementById('searchForm').submit();
        }
    </script>
}