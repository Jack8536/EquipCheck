@{
    ViewData["Title"] = "表單管理";
}

<!-- 麵包屑 -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><i class="bi bi-folder me-1"></i>文件管理</li>
        <li class="breadcrumb-item active" aria-current="page">表單管理</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">表單管理</h5>
    </div>
    <div class="card-body">
        <form id="searchForm" method="get">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">表單名稱</label>
                    <input type="text" class="form-control" name="keyword" placeholder="請輸入表單名稱">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>搜尋
                    </button>
                    <button type="button" class="btn btn-secondary ms-2" onclick="clearForm()">
                        <i class="bi bi-x-circle me-1"></i>清除
                    </button>
                    <button type="button" class="btn btn-success ms-2" onclick="location.href='@Url.Action("Add", "FormManagement")'">
                        <i class="bi bi-plus-lg me-1"></i>新增
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card mt-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>年度(民國)</th>
                        <th>表單填寫(起)</th>
                        <th>表單填寫(迄)</th>
                        <th>表單名稱</th>
                        <th>發布人員</th>
                        <th>發布狀態</th>
                        <th>動作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
@*                         @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Year</td>
                                <td>@item.StartDate?.ToString("yyyy/MM/dd")</td>
                                <td>@item.EndDate?.ToString("yyyy/MM/dd")</td>
                                <td>@item.FormName</td>
                                <td>@item.PublishUser</td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge bg-success">上架</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">下架</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-sm btn-outline-primary"
                                                onclick="location.href='@Url.Action("Edit", "PersonalForm", new { id = item.Id })'">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        } *@
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">無資料</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 清除搜尋條件
        function clearForm() {
            // 清除所有輸入欄位
            document.querySelector('input[name="keyword"]').value = '';

            // 送出表單以重新載入頁面
            document.getElementById('searchForm').submit();
        }
    </script>
}