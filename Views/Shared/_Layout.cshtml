<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <title>@ViewData["Title"] - 設備檢核系統</title> *@
    <title>設備檢核系統</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <style>
        .sidebar {
            min-height: 100vh;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .nav-link {
            color: #333;
            padding: 0.5rem 1rem;
        }

        .sub-menu {
            padding-left: 2rem;
        }

        .navbar-brand img {
            max-height: 40px;
        }

        .main-content {
            margin-left: 250px;
        }

        #sidebar {
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 999;
            background: #f8f9fa;
            transition: all 0.3s;
        }
    </style>
</head>
<body>
    <!-- 側邊欄 -->
    <div id="sidebar" class="sidebar bg-light">
        <div class="d-flex flex-column">
            <!-- Logo -->
            <div class="p-3 border-bottom">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo/iscomlog.jpg?20250902" alt="Logo" class="img-fluid">
                </a>
            </div>

            <!-- 選單 -->
            <nav class="mt-3">
                <div class="accordion" id="mainMenu">
                    <!-- 個人管理 -->
                    <div class="accordion-item border-0">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#personal">
                                <i class="bi bi-person me-2"></i>個人管理
                            </button>
                        </h2>
                        <div id="personal" class="accordion-collapse collapse" data-bs-parent="#mainMenu">
                            <div class="accordion-body p-0">
                                <a href="@Url.Action("List","PersonalForm")" class="nav-link sub-menu"><i class="bi bi-file-text me-2"></i>表單管理</a>
                            </div>
                        </div>
                    </div>

                    <!-- 文件管理 -->
                    <div class="accordion-item border-0">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#document">
                                <i class="bi bi-folder me-2"></i>文件管理
                            </button>
                        </h2>
                        <div id="document" class="accordion-collapse collapse" data-bs-parent="#mainMenu">
                            <div class="accordion-body p-0">
                                <a href="@Url.Action("List", "FormManagement")" class="nav-link sub-menu"><i class="bi bi-file-text me-2"></i>表單管理</a>
                            </div>
                            <div class="accordion-body p-0">
                                <a href="@Url.Action("List", "AssetManagement")" class="nav-link sub-menu"><i class="bi bi-file-text me-2"></i>資產管理</a>
                            </div>
                        </div>
                    </div>

                    <!-- 系統管理 -->
                    <div class="accordion-item border-0">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#system">
                                <i class="bi bi-gear me-2"></i>系統管理
                            </button>
                        </h2>
                        <div id="system" class="accordion-collapse collapse" data-bs-parent="#mainMenu">
                            <div class="accordion-body p-0">
                                <a href="@Url.Action("List", "AccountManagement")" class="nav-link sub-menu"><i class="bi bi-people me-2"></i>帳號管理</a>
                                <a href="@Url.Action("List", "DepartmentManagement")" class="nav-link sub-menu"><i class="bi bi-diagram-3 me-2"></i>部門管理</a>
                                <a href="@Url.Action("List", "ActionLog")" class="nav-link sub-menu"><i class="bi bi-journal-text me-2"></i>操作日誌</a>
                                <a href="@Url.Action("List", "OptionManagement")" class="nav-link sub-menu"><i class="bi bi-list-check me-2"></i>選項管理</a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- 主要內容區 -->
    <div class="main-content">
        <!-- 頂部導航欄 -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <a class="nav-link" href="@Url.Action("List", "PersonalForm")">
                    <i class="bi bi-house-door me-1"></i>首頁
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarText">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>
                                @Context.Session.GetString("UserName")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Login")">
                                        <i class="bi bi-box-arrow-right me-2"></i>登出
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- 頁面內容 -->
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>